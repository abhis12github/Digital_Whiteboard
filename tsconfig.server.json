{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["server", "common/types/global.d.ts"],
  "exclude": ["node_modules"]
}
